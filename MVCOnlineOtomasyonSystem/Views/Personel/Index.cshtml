@using MVCOnlineOtomasyonSystem.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Personel Bilgileri</h2>

<p>
    @Html.ActionLink("Personel Ekle", "PersonelEkle")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Personel ID
        </th>
        <th>
            Personel Adı
        </th>
        <th>
            Personel Soyadı
        </th>
        <th>
            Personel Departmanı
        </th>
        <th>
            Personel Görseli
        </th>        
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@item.PersonelID</td>
    <td>@item.PersonelAd</td>
    <td>@item.PersonelSoyad</td>
    <td>@item.Departman.DepartmanAd</td>
    <td>@item.PersonelGorsel</td>    
    <td><a href="/Personel/PersonelGetir/@item.PersonelID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Personel/SatisDetay/@item.PersonelID" class="btn btn-warning">Satışlar</a></td>
</tr>
}

</table>

@using MVCOnlineOtomasyonSystem.Models.Siniflar
@model List<Cariler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Cari Bilgileri</h2>

<p>
    @Html.ActionLink("Yeni Cari Ekle", "CariEkle")
</p>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Şehir</th>
        <th>Mail Adresi</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Geçmişi</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@item.CariID</td>
    <td>@item.CariAd</td>
    <td>@item.CariSoyad</td>
    <td>@item.CariSehir</td>
    <td>@item.CariMail</td>
    <td><a href="/Cari/CariSil/@item.CariID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Cari/CariGetir/@item.CariID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Cari/CariSatis/@item.CariID" class="btn btn-warning">Satış Geçmişi</a></td>
</tr>
}
</table>

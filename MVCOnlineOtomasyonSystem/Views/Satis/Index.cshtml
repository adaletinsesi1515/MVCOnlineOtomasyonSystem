@model IEnumerable<MVCOnlineOtomasyonSystem.Models.Siniflar.SatisHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<a href="/Satis/YeniSatis/" class="btn btn-danger">Ürün Satışı Yap</a>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>        
    </tr>

@foreach (var item in Model) {
<tr>
    <td>@item.SatisID</td>
    <td>@item.Urun.UrunAd</td>
    <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
    <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
    <td>@item.Adet</td>
    <td>@item.Fiyat</td>
    <td>@item.ToplamTutar</td>
    <td>@item.Tarih</td>
    <td><a href="/Satis/SatisGetir/@item.SatisID" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-warning">Detaylar</a></td>
</tr>
}

</table>

@model IEnumerable<MVCOnlineOtomasyonSystem.Models.Siniflar.SatisHareket>


@{
    ViewBag.Title = "SatisDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Satış Detayları</h2>
<br />

<table class="table table-hover">
    <tr>
        <th>Cari Adı</th>
        <th>Cari Soyadı</th>
        <th>Ürün</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Tutar</th>
        <th>Tarih</th>        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Cariler.CariAd</td>
            <td>@item.Cariler.CariSoyad</td>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
        </tr>
    }

</table>

<button class="btn btn-default" style="background-color:dodgerblue; color:white" >YAZDIR</button>